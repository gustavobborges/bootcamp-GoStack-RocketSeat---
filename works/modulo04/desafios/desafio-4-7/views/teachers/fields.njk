<div class="item">
    <div>Avatar URL</div>
    <div>
        <input
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Teacher</div>
    <div>
        <input
            type="text"
            name="name"
            placeholder="Name"
            value="{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Birthday</div>
    <div>
        <input
            type="date"
            name="birth"
            value="{{ teacher.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Schooling level</div>
    <div>
        <select name="schooling" selected="{{ teacher.schooling }}">
            <option value="medio">Ensino Médio Completo</option> 
            <option value="superior">Ensino Superior Completo</option> 
            <option value="mestrado">Mestrado</option> 
            <option value="doutorado">Doutorado</option> 
        </select>
    </div>
</div>

<div class="item">
    <div>Class type
        <span>
            <input
                type="radio"
                name="classType"
                value="Presential"
                {% if teacher.classType == 'Presential' %}
                checked
                {% endif %}}>Presential
        </span>
        <span>
            <input
                type="radio"
                name="classType"
                value="Remote"
                {% if teacher.classType == 'Remote' %}
                checked
                {% endif %}}>Remote
        </span>
    </div>
</div>

<div class="item">
    <div>Themes</div>
    <div>
        <input
            type="text"
            name="themes"
            placeholder="Separe as áreas de atuação por vírgulas"
            value="{{ teacher.themes }}">
    </div>
</div>

<button type="submit">Salvar</button>

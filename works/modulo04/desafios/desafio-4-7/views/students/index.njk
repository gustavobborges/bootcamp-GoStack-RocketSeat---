{% extends "layout.njk" %}

{% block head%}
    <title>Students</title>
{% endblock %}

{% block content %}

<div class="card table-container">
    <a href="/students/create">Novo</a>
    <table width=100%>
        <thead>
            <tr>
                <th>Nome Completo</th>
                <th>Email</th>
                <th>Ano Escolar</th>
                <th>Carga Horária</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span style="background-image: url({{ student.avatar_url }})"></span>
                    {{ student.name }}
                </td>
                <td>{{ student.email }}</td>
                <td>
                    {% if student.classY == '5f' %} Fundamental - 5º Ano {% endif %}
                    {% if student.classY == '6f' %} Fundamental - 6º Ano {% endif %}
                    {% if student.classY == '7f' %} Fundamental - 7º Ano {% endif %}
                    {% if student.classY == '8f' %} Fundamental - 8º Ano {% endif %}
                    {% if student.classY == '9f' %} Fundamental - 9º Ano {% endif %}
                    {% if student.classY == '1m' %} Médio - 1º Ano {% endif %}
                    {% if student.classY == '2m' %} Médio - 2º Ano {% endif %}
                    {% if student.classY == '3m' %} Médio - 3º Ano {% endif %}
                </td>

                <td>{{ student.hours }}</td>
                <td>
                    <a href="/students/{{ student.id }}">View</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}
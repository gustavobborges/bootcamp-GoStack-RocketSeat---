{% extends "layout.njk" %}

{% block head%}
    <title>Conteúdo - Gustavo Borges</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet">
{% endblock %}

{% block content %}

    <div class="wrapper">
        <p>Cursos Rocketseat</p>
    </div>

    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{ item.id }}">
                <div class="card__image-container">
                    <img src="{{ item.url_img }}" alt="Imagem do {{ item.name }}">  
                </div>
                <div class="conteudo_card">
                    <div class="card-content">
                        <p>{{ item.name }}</p>
                    </div>
                    <div class="card-info">
                        <p>Módulos: {{ item.modules }}</p>
                        <div class="card-price">
                            <p>{{ item.price }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <div class="butt">
                <a class="max-modal">
                    <i class="material-icons">exposure</i>
                </a>
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>
            </div>
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="/script.js"></script>

{% endblock %}

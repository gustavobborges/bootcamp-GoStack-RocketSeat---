{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="avatar"
        style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover ">
    </section>

    <section class="details">
        <h3>Details</h3>

        <div class="item">
            <div>Teacher</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="item">
            <div>Birthday</div>
            <div>{{ teacher.birth }}</div>
        </div>

        <div class="item">
            <div>Schooling level</div>
            <div>{{ teacher.schooling }}</div>
        </div>

        <div class="item">
            <div>Class type</div>
            <div>{{ teacher.classType }}</div>
        </div>

        <div class="item">
            <div>Themes</div>
            <div>
                {% for theme in teacher.themes %}
                    <span>{{ theme }}</span>
                {% endfor %}
            </div>
        </div>

        <a href="{{ teacher.id }}/edit" class="button">Editar</a>

    </section>
    
</form>
{% endblock %}